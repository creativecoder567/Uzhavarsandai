    <RelativeLayout
        android:id="@+id/layout_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/category_name_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            app:srcCompat="@drawable/place_holder_big" />

        <TextView
            android:textColor="#000"
            android:id="@+id/category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@+id/category_name_iv"
            android:layout_toRightOf="@+id/category_name_iv"
            android:text="Milk" />

        <EditText
            android:gravity="center"
            android:text="10"
            android:id="@+id/etPrice"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@+id/category_name"
            android:layout_alignBottom="@+id/category_name"
            android:layout_marginLeft="100dp"
            android:layout_toEndOf="@+id/category_name"
            android:layout_toRightOf="@+id/category_name"
            android:ems="10"
            android:inputType="number"
             />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#f2f0f0" />

